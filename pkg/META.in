version = "%{version}%"
description = "HardCaml Framwork"
requires = "astring hardcaml"
archive(byte) = "HardCamlFramework.cma"
archive(byte, plugin) = "HardCamlFramework.cma"
archive(native) = "HardCamlFramework.cmxa"
archive(native, plugin) = "HardCamlFramework.cmxs"
exists_if = "HardCamlFramework.cma"


package "js" (
 version = "%{version}%"
 description = "HardCaml Framework javascript backend"
 requires = "hardcaml-framework hardcaml.js omd str js_of_ocaml"
 archive(byte) = "HardCamlFrameworkJS.cma"
 archive(byte, plugin) = "HardCamlFrameworkJS.cma"
 archive(native) = "HardCamlFrameworkJS.cmxa"
 archive(native, plugin) = "HardCamlFrameworkJS.cmxs"
 exists_if = "HardCamlFrameworkJS.cma"
)

package "console" (
 version = "%{version}%"
 description = "HardCaml Framework console backend"
 requires = "hardcaml.dynlink hardcaml-framework hardcaml-waveterm lwt omd str"
 archive(byte) = "HardCamlFrameworkConsole.cma"
 archive(byte, plugin) = "HardCamlFrameworkConsole.cma"
 archive(native) = "HardCamlFrameworkConsole.cmxa"
 archive(native, plugin) = "HardCamlFrameworkConsole.cmxs"
 exists_if = "HardCamlFrameworkConsole.cma"
)

